---
import BaseLayout from "@components/base/BaseLayout.astro";
import { markdownify } from "@lib/textConverter";
import Button from "@components/common/Button.astro";
import type { HomeEntry } from "@/types";
import { Image } from "astro:assets";
interface Props {
  entry: HomeEntry;
}
const { entry } = Astro.props;
const { image, imageAlt, title, content } = entry.data;

// Helper function to create tracking-friendly slug from button label
function createTrackingId(label: string): string {
  return label
    .toLowerCase()
    .replace(/[^a-z0-9\s]/g, "") // Remove special chars
    .replace(/\s+/g, "-") // Replace spaces with hyphens
    .replace(/^-+|-+$/g, ""); // Remove leading/trailing hyphens
}
---

<BaseLayout>
  <!-- Banner -->
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="text-center lg:col-6">
          {
            image && (
              <div class="blur-[0px]">
                <Image
                  class="mb-6 w-64"
                  src={image}
                  alt={imageAlt}
                  width={1024}
                  height={1024}
                  loading="eager"
                />
              </div>
            )
          }
          <h1 set:html={markdownify(title)} class="mb-4" />
          <p set:html={markdownify(content)} class="mb-8 text-xl" />
          <hr />
          <p class="mb-8 mt-8">
            These are living drafts of lyrical fables. Best read slowly (or
            aloud). I revise in public.
          </p>
          <p class="mb-8 mt-8">
            If you prefer straighter prose, start with “<a
              class="underline"
              href="/books/kippen">Kippen</a
            >” or “<a href="/books/village" class="underline">Village</a>.”
          </p>
          {
            entry.data.buttons && entry.data.buttons.length && (
              <div class="flex flex-wrap justify-center gap-4">
                {entry.data.buttons.map((btn, index) => (
                  <Button
                    label={btn.label}
                    link={btn.link}
                    hoverInvert
                    color=""
                    data-track-id={createTrackingId(btn.label)}
                    data-track-label={btn.label}
                    data-track-position={index + 1}
                    data-track-category="homepage-cta"
                  />
                ))}
              </div>
            )
          }
          <p class="mt-4 text-lg text-gray-500">
            Low on bandwidth? <a href="https://thrd.me/m" class="underline"
              >Use this link</a
            >.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Friend Testimonials -->
  <section class="section py-12 mt-12">
    <div class="container">
      <h2 class="text-center text-2xl font-semibold mb-8">
        What Friends Are Saying
      </h2>
      <div class="grid gap-8 sm:grid-cols-1 md:grid-cols-3">
        <blockquote class="bg-white p-6 rounded-lg shadow-md">
          <p class="italic text-gray-700 mb-4">
            "The Elsebeneath and all its moving parts are for kids with
            imagination and adults who still have theirs. Every part hits you in
            different ways and makes you keep reading."
          </p>
          <footer class="text-gray-500">— Annalisa D</footer>
        </blockquote>
        <blockquote class="bg-white p-6 rounded-lg shadow-md">
          <p class="italic text-gray-700 mb-4">
            "Incredible, lighthearted and trippy. An extraordinary adventure
            that stole my heart."
          </p>
          <footer class="text-gray-500">— Vivienne L</footer>
        </blockquote>
        <blockquote class="bg-white p-6 rounded-lg shadow-md">
          <p class="italic text-gray-700 mb-4">
            "A fresh ink spot in open waters, everytime you think you have
            reached full depth something new unfolds. Layers of metaphors paint
            a complex but easy to follow emotional narrative"
          </p>
          <footer class="text-gray-500">— Mackenzie C</footer>
        </blockquote>
      </div>
    </div>
  </section>
</BaseLayout>
