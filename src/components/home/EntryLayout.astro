---
import BaseLayout from "@components/base/BaseLayout.astro";
import { markdownify } from "@lib/textConverter";
import Button from "@components/common/Button.astro";
import type { HomeEntry } from "@/types";
import { Image } from "astro:assets";
interface Props {
  entry: HomeEntry;
}
const { entry } = Astro.props;
const { image, imageAlt, title, content } = entry.data;

// Helper function to create tracking-friendly slug from button label
function createTrackingId(label: string): string {
  return label
    .toLowerCase()
    .replace(/[^a-z0-9\s]/g, "") // Remove special chars
    .replace(/\s+/g, "-") // Replace spaces with hyphens
    .replace(/^-+|-+$/g, ""); // Remove leading/trailing hyphens
}
---

<BaseLayout>
  <!-- Banner -->
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="text-center lg:col-6">
          {
            image && (
              <div class="blur-[0px]">
                <Image
                  class="mb-6 w-64"
                  src={image}
                  alt={imageAlt}
                  width={1024}
                  height={1024}
                  loading="eager"
                />
              </div>
            )
          }
          <h1 set:html={markdownify(title)} class="mb-4" />
          <p set:html={markdownify(content)} class="mb-8" />
          {
            entry.data.buttons && entry.data.buttons.length && (
              <div class="flex flex-wrap justify-center gap-4">
                {entry.data.buttons.map((btn, index) => (
                  <Button
                    label={btn.label}
                    link={btn.link}
                    hoverInvert
                    color=""
                    data-track-id={createTrackingId(btn.label)}
                    data-track-label={btn.label}
                    data-track-position={index + 1}
                    data-track-category="homepage-cta"
                  />
                ))}
              </div>
            )
          }
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
