---
import BaseLayout from "@components/base/BaseLayout.astro";
import Pagination from "@components/common/StoryPagination.astro";
import Share from "@components/common/Share.astro";
import { plainify } from "@lib/textConverter";
import type { StoryEntry } from "@/types";
import Button from "@components/common/Button.astro";

import { render } from "astro:content";
import EntryHeader from "@components/common/StoryHeader.astro";
interface Props {
  entry: StoryEntry;
  pageIDs: string[];
  pageIndex: number;
  pageCount: number;
}

const { entry }: Props = Astro.props;
const { title, description, autodescription, cover } = entry.data;
const { Content } = await render(entry);

const descriptionLength = 200;

const entryDescription =
  description ||
  (autodescription ? plainify(entry.body!.slice(0, descriptionLength)) : null);

const canonicalUrl = `https://elsebeneath.online/story/${entry.id}`;
---

<BaseLayout
  title={title}
  description={entryDescription}
  image={cover?.src}
  canonical={canonicalUrl}
>
  <section class="flex container justify-center my-8">
    <div class="col md:col-8">
      <article class="">
        <section>
          <EntryHeader entry={entry} />
        </section>
        <section class="content mb-4 glass px-4 rounded-lg">
          <Content />
        </section>
      </article>
    </div>
  </section>
  <section class=`container mt-4 mb-8 col md:col-8`>
    <div class="flex items-center justify-center lg:justify-end mt-4">
      <Button
        label={"Back to List"}
        link={"/books"}
        hoverInvert
        color="primary"
        data-track-category="list-cta"
      />
    </div>
  </section>
  <section class=`container mt-4 mb-8 col md:col-8`>
    <hr />
    <div class="flex items-center justify-center lg:justify-end mt-4">
      <Share
        title={title}
        description={entryDescription}
        folder={"story"}
        id={entry.id}
      />
    </div>
  </section>
</BaseLayout>
