---
import ThemeScript from "@components/base/ThemeScript.astro";
---

<div class="inline-flex items-center">
  <input
    class="absolute opacity-0"
    id="theme-switcher"
    data-theme-switcher
    type="checkbox"
  />
  <label
    for="theme-switcher"
    class="relative inline-block h-6 w-6 cursor-pointer"
  >
    <span class="sr-only">theme switcher</span>
    <span
      class="absolute inset-0 flex items-center justify-center rounded-full"
    >
      <!-- Sun Icon (Light Mode) -->
      <svg
        class="absolute z-10 opacity-100 dark:opacity-0 transition-opacity duration-200"
        viewBox="0 0 24 24"
        width="20"
        height="20"
      >
        <path
          fill="currentColor"
          d="M20.742 13.045a8.088 8.088 0 0 1-2.077.271c-2.135 0-4.14-.83-5.646-2.336a8.025 8.025 0 0 1-2.064-7.723A1 1 0 0 0 9.73 2.034a10.014 10.014 0 0 0-4.489 2.582c-3.898 3.898-3.898 10.243 0 14.143a9.937 9.937 0 0 0 7.072 2.93 9.93 9.93 0 0 0 7.07-2.929 10.007 10.007 0 0 0 2.583-4.491 1.001 1.001 0 0 0-1.224-1.224z"
        ></path>
      </svg>

      <!-- Moon Icon (Dark Mode) -->
      <svg
        class="absolute z-10 opacity-0 dark:opacity-100 transition-opacity duration-200"
        viewBox="0 0 24 24"
        width="20"
        height="20"
      >
        <path
          fill="currentColor"
          d="M6.993 12c0 2.761 2.246 5.007 5.007 5.007s5.007-2.246 5.007-5.007S14.761 6.993 12 6.993 6.993 9.239 6.993 12zM12 8.993c1.658 0 3.007 1.349 3.007 3.007S13.658 15.007 12 15.007 8.993 13.658 8.993 12 10.342 8.993 12 8.993zM10.998 19h2v3h-2zm0-17h2v3h-2zm-9 9h3v2h-3zm17 0h3v2h-3zM4.219 18.363l2.12-2.122 1.415 1.414-2.12 2.122zM16.24 6.344l2.122-2.122 1.414 1.414-2.122 2.122zM6.342 7.759 4.22 5.637l1.415-1.414 2.12 2.122zm13.434 10.605-1.414 1.414-2.122-2.122 1.414-1.414z"
        ></path>
      </svg>
    </span>
  </label>
</div>

<ThemeScript />
